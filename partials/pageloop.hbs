{{!-- The template below includes the markup for each post --}}

{{#foreach pages}}
{{#is "page"}}
<div class="m-recommended-slider__item">
  {{/is}}
  {{#if feature_image}}
  <article class="m-article-card {{post_class}}">
    <div class="m-article-card__picture lozad" data-background-image="{{img_url feature_image size="m"}}">
      {{else}}
      <article class="m-article-card no-picture {{post_class}}">
        <div class="m-article-card__picture">
          {{/if}}
          {{#has slug="peticion-de-oracion"}}
            <a target="_blank" rel="noopener" class="m-article-card__picture-link" data-open-in-church-center-modal="true" href="https://amistadcristiana.churchcenter.com/people/forms/112846"></a>
          {{else}}
            <a href="{{url}}" class="m-article-card__picture-link" aria-label="Article"></a>
          {{/has}}
          <a href="{{primary_author.url}}" class="m-article-card__author js-tooltip" aria-label="Authors"
            data-tippy-content="{{t "Posted by"}} {{primary_author.name}} {{authors autolink="false" from="2" prefix=(t "Among with") separator=" , "}}">
            {{#if primary_author.profile_image}}
            <div style="background-image: url({{img_url primary_author.profile_image size="xs"}});"></div>
            {{else}}
            <div style="background-image: url({{asset "images/default-avatar-square-small.jpg"}});"></div>
            {{/if}}
          </a>
          {{#if featured}}
          <a href="{{url}}" class="m-article-card__featured js-tooltip" data-tippy-content="{{t "Featured"}}"
            aria-label="Article">
            <span class="icon-star"></span>
          </a>
          {{/if}}
        </div>
        {{#if primary_tag}}
        <div class="m-article-card__info">
          {{#has slug="peticion-de-oracion"}} 
          <a target="_blank" class="m-article-card__tag" rel="noopener" data-open-in-church-center-modal="true" href="https://amistadcristiana.churchcenter.com/people/forms/112846">/{{primary_tag.name}}</a>
          {{else}}
          <a href="{{primary_tag.url}}" class="m-article-card__tag">/{{primary_tag.name}}</a>
          {{/has}}
          {{else}}
          <div class="m-article-card__info no-tag">
            {{/if}}
              {{#has slug="peticion-de-oracion"}} 
                  <a target="_blank" class="m-article-card__info-link" rel="noopener" data-open-in-church-center-modal="true" href="https://amistadcristiana.churchcenter.com/people/forms/112846">
              {{else}}
                  <a href="{{url}}" class="m-article-card__info-link">
              {{/has}}
              <div>
                <h2
                  class="m-article-card__title js-article-card-title {{#unless feature_image}}js-article-card-title-no-image{{/unless}}"
                  title="{{title}}">
                  {{title}}
                </h2>
                <p>{{custom_excerpt}}</p>
              </div>
              <div class="m-article-card__timestamp">
                {{#has slug="peticion-de-oracion"}} 
                  <h2>Evianos tu petición </h2><span class="icon-arrow-right"></span>
                {{else}}
                  <h2>Conoce más </h2><span class="icon-arrow-right"></span>
                {{/has}}                
                {{!-- <span>&bull;</span>
                <span>{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span> --}}
              </div>
            </a>
          </div>
      </article>
      {{#is "page"}}
    </div>
    {{/is}}
    {{else}}
    <header class="m-heading no-margin">
      <h3>{{t "No posts found"}}</h3>
      <p>
        {{t "Apparently there are no posts at the moment, check again later."}}
      </p>
    </header>
    {{/foreach}}